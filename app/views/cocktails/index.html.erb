<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path 'fqwyq0gbivhnrid7tivu', height: 300, width: 400, crop: :fill %>');">
  <div class="banner-content">
    <h1>Mister Cocktail</h1>
    <p>Have a drink!</p>
  </div>
</div>


<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1468465236047-6aac20937e92?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=4b33fddb525a05644c19a67c7db3522e&auto=format&fit=crop&w=500&q=60');">
            <div class="card-category">NEW!</div>
            <div class="card-description">
              <h2><%= cocktail.name %></h2>
            </div>
            <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
            <%= link_to '', cocktail_path(cocktail), class: "card-link" %>
          </div>
          <div>
            <%= link_to cocktail_path(cocktail), method: 'delete' do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
